    \   'javascript': ['standard'],
    \   'python': ['black', 'mypy', 'vulture'],
    \   'c': ['clang-format'],
    \   'cpp': ['clang-format'],
    \   'proto': ['prototool'],
\}
let g:ale_fixers_explicit = 1
let g:ale_fixers = {
    \   'javascript': ['standard'],
    \   'python': ['black'],
    \   'c': ['clang-format'],
    \   'cpp': ['clang-format'],
\}
let g:ale_fix_on_save = 1
